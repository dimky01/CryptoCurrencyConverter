<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BitCoin Price Converter"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@layout/edit_view_border"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@layout/border"
                    android:padding="6dp"
                    android:text="BTC"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/BTC_inputted_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="9dp"
                    android:textAlignment="viewEnd"
                    tools:text="23" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@layout/edit_view_border"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/selected_currency_BTC"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@layout/border"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="USD"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_margin="1dp" />

                <TextView
                    android:id="@+id/BTC_converted_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="9dp"
                    android:textAlignment="viewEnd"
                    tools:text="23" />

            </LinearLayout>

            <Button
                android:id="@+id/convert_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="convert"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="25dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ethereum Price Converter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@layout/edit_view_border"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@layout/border"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="ETH"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_margin="1dp"/>

                <EditText
                    android:id="@+id/ETH_inputted_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="9dp"
                    android:textAlignment="viewEnd"
                    tools:text="23" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@layout/edit_view_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selected_currency_ETH"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@layout/border"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="USD"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_margin="1dp" />

                <TextView
                    android:id="@+id/ETH_converted_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="9dp"
                    android:textAlignment="viewEnd"
                    tools:text="23" />

            </LinearLayout>

            <Button
                android:id="@+id/convert_eth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="convert"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>